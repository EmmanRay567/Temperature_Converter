//---------------------------------------------------------------------------
#include <iostream>

using namespace std;

int main()
{
    float temp, results;
    char unit1, Unit2;
    cout << "Enter the temperature value:" << endl;
    cin >> temp;

    cout << "Enter the source unit (C for Celsius, F for Fahrenheit, K for Kelvin, R for Rankine): F ";
     cin >> unit1;

     cout << "Enter target unit: (C for Celsius, F for Fahrenheit, K for Kelvin, R for Rankine): K ";
     cin >> Unit2;
        switch(unit1) {
         case 'C':
           switch(Unit2){
           case 'C': results = temp;
           break;
            case 'F': results = (temp * 9.0 / 5.0) + 32;
             break;
             case 'K': results = temp + 273.15;
               break;
             case 'R': results = (temp + 273.15) * 9.0 / 5.0;
                break;
             default: cout << "Invalid target unit.";
               break;
        }
        break;
             case 'F':
                switch (Unit2) {
                case 'C': results = (temp - 32) * 5.0 / 9.0;
                 break;
                case 'F': results = temp;
                 break;
                case 'K': results = (temp - 32) * 5.0 / 9.0 + 273.15;
                    break;
                case 'R': results = temp + 459.67;
                     break;
                default: cout << "Invalid target unit.";
                }
                 break;

                 case 'K':
            switch (Unit2) {
                case 'C': results = temp - 273.15;
                   break;
                case 'F': results = (temp - 273.15) * 9.0 / 5.0 + 32;
                   break;
                case 'K': results = temp;
                  break;
                case 'R': results = temp * 9.0 / 5.0;
                   break;
                default: cout <<"Invalid target unit.";
            }
            break;

             case 'R':
            switch (Unit2) {
                case 'C': results = (temp - 491.67) * 5.0 / 9.0;
                  break;
                case 'F': results = temp - 459.67;
                   break;
                case 'K': results = temp * 5.0 / 9.0;
                   break;
                case 'R': results = temp;
                   break;
               default: cout <<"Invalid target unit.";
            }
            break;

              default:
            cout << "Invalid source unit.";
                    return 0;
    }

        cout << "Converted temperature: " << results << " " << Unit2;


    return 0;
}
